{
  "manifest_version": 2,

  "name": "Tablr",
  "description": "This extension organizes your tabs",
  "version": "0.1",

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "background",
    "tabs"
  ]
}
